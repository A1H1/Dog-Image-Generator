<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:minHeight">@dimen/dimen_0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PrimaryText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryText.Bold.24">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TertiaryText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TertiaryText.Regular">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TertiaryText.Regular.16">
        <item name="android:textSize">16sp</item>
    </style>
</resources>